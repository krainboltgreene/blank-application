#!/usr/bin/env bash
osascript <<EOF
  tell application "iTerm2"
    tell first window
      tell current session of (create tab with default profile)
        write text "bin/local-start-phoenix"

        select split horizontally with same profile
        write text "bin/local-start-webpack-server"

        select split horizontally with same profile
        write text "bin/local-start-webpack-client"
      end tell

      tell current session of (create tab with default profile)
        write text "bin/local-start-postgres"
      end tell

      # tell current session of (create tab with default profile)
      #   write text "bin/local-start-eslint"

      #   select split horizontally with same profile

      #   write text "bin/local-start-storybook"

      #   select split horizontally with same profile

      #   write text "bin/local-start-backend-tests"
      # end tell
    end tell
  end tell
EOF
