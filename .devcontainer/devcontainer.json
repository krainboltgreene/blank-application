// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "Project",
  "dockerComposeFile": "docker-compose.yml",
  "overrideCommand": false,
  "userEnvProbe": "loginInteractiveShell",
  "service": "codespace",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.automationShell.linux": "zsh",
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert",
    "terminal.integrated.copyOnSelection": true,
    "eslint.format.enable": true,
    "eslint.onIgnoredFiles": "warn",
    "eslint.run": "onType",
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "graphql"
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "graphql"
    ],
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "elixirLS.fetchDeps": false,
    "elixirLS.mixEnv": "dev",
    "editor.tabSize": 2,
    "sqltools.connections": [
      {
        "name": "Primary database",
        "driver": "PostgreSQL",
        "previewLimit": 50,
        "server": "localhost",
        "port": 5432,
        "database": "clumsy_chinchilla_dev",
        "username": "postgres",
        "password": ""
      }
    ]
  },
  "remoteUser": "codespace",
  "forwardPorts": [4000, 5432],
  "workspaceFolder": "/home/codespace/source",
  "extensions": [
    "krainboltgreene.all-builtin-commands",
    "ms-vscode.atom-keybindings",
    "github.codespaces",
    "jakebecker.elixir-ls",
    "benvp.vscode-hex-pm-intellisense"
  ],
  "waitFor": "postStartCommand",
  "onCreateCommand": "/bin/zsh -i -c .devcontainer/onCreate.sh",
  "postStartCommand": "/bin/zsh -i -c .devcontainer/postStart.sh"
}
