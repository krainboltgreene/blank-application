{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@clumsy_chinchilla/*": ["lib/client/*"] // This mapping is relative to "baseUrl"
    }
  }
}
